<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.kotlin.rxjava">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:name=".MyApplication"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".SelectionActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ui.RxBus.RxBusActivity">
        </activity>
        <activity android:name=".ui.networking.NetworkingActivtiy">
        </activity>
        <activity
                android:name=".ui.ProfileScreen"
                android:label="@string/title_activity_profile_screen"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>